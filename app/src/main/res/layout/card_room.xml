<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvRoom"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        //image
        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/imageRoom"
            android:src="@drawable/noimage"
            />

        //Room Name
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRoomName"
            android:text="Rumah Sakit Test"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="top|center"
            android:layout_toRightOf="@+id/imageRoom"
            />

        //Price
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            android:text="Rp. 1.200.000"
            android:layout_gravity="top|center"
            android:layout_below="@id/tvRoomName"
            android:layout_toRightOf="@+id/imageRoom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:id="@+id/arrowDetail"
            android:src="@drawable/arrow_detail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
